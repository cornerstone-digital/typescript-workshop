{
  "name": "typescript-workshop",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "git@github.com:cornerstone-digital/typescript-workshop.git",
  "author": "Martin Egan <martingegan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p",
    "start": "webpack-dev-server -d --content-base ./public --hot --config=./webpack.config.js",
    "start:server": "ts-node -r tsconfig-paths/register ./src/server/index.ts"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@types/express": "4.16.0",
    "@types/node": "10.12.18",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@types/socket.io": "2.1.2",
    "@types/socket.io-client": "1.4.32",
    "@types/webpack": "4.4.24",
    "@types/webpack-env": "1.13.6",
    "lite-server": "2.4.0",
    "nodemon": "1.18.9",
    "stylelint-config-standard": "18.2.0",
    "ts-loader": "5.3.3",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.7.0",
    "tslint": "5.12.1",
    "tslint-config-standard-plus": "2.1.1",
    "tslint-sonarts": "1.8.0",
    "typescript": "3.2.2",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "@vfuk/web-core": "1.1.1",
    "express": "4.16.4",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "src/styles/vendor/**/*.scss",
      "lib/*.scss"
    ],
    "ignoreProperties": [
      "composes"
    ],
    "rules": {
      "max-empty-lines": 4,
      "string-quotes": "single",
      "function-url-quotes": "always",
      "color-hex-length": "long",
      "declaration-colon-newline-after": null,
      "declaration-block-no-redundant-longhand-properties": null,
      "font-family-name-quotes": null,
      "number-leading-zero": "never",
      "value-list-comma-newline-after": null,
      "max-nesting-depth": 2,
      "selector-pseudo-element-colon-notation": "single",
      "at-rule-name-space-after": null,
      "declaration-empty-line-before": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extend",
            "mixin",
            "include",
            "content",
            "if",
            "else",
            "for",
            "function",
            "return"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ]
    }
  }
}
