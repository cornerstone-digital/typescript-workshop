{
  "compilerOptions": {
    "lib": [
      "dom",
      "es6",
      "es2015"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@root/*": ["./*"],
      "@shared/*": ["./src/shared/*"],
      "@client/*": ["./src/client/*"],
      "@server/*": ["./src/server/*"]
    }
  },
  "compileOnSave": false,
  "exclude": [
    "./node_modules/*",
    "./lib/*"
  ],
  "include": [
    "./config/**/*.ts",
    "./src/**/*.ts"
  ]
}
